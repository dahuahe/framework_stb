{
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/template/**/*",
        "./src/package/**/*"
    ],
    "compilerOptions": {
        "outDir": "./dist/js",
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "amd",
        "target": "es5",
        "allowJs": true,
        "downlevelIteration": true,
        "lib": [
            "es2015.promise",
            "dom",
            "es2015"
        ]
    },
    "compileOnSave": false
}